{
  "name": "study-abroad-platform",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "turbo dev",
    "dev:all": "./dev.sh",
    "docker:up": "docker-compose up -d db redis",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f db redis",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "prepare": "husky",
    "sbom:generate": "cdxgen -o sbom/bom.json --deep -t js --spec-version 1.5",
    "sbom:verify": "node -e \"const s=require('./sbom/bom.json'); if(!s.specVersion||!(s.components||[]).length){process.exit(1)} console.log('SBOM OK â€” specVersion:', s.specVersion, '| components:', s.components.length);\""
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@cyclonedx/cdxgen": "^11.3.2",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "turbo": "^2.3.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.53.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --no-warn-ignored"
    ],
    "*.{js,jsx,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "prisma",
      "@prisma/client",
      "@prisma/engines",
      "@nestjs/core",
      "@parcel/watcher",
      "@swc/core",
      "bcrypt",
      "sharp"
    ],
    "overrides": {
      "form-data": ">=4.0.0",
      "qs": ">=6.14.1",
      "tar": ">=7.5.7",
      "fast-xml-parser": ">=5.3.4",
      "@isaacs/brace-expansion": ">=5.0.1"
    }
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@sentry/nestjs": "^10.34.0",
    "@sentry/nextjs": "^10.34.0",
    "@sentry/node": "^10.34.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.27.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "socket.io-client": "^4.8.3"
  }
}
